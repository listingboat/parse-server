<div class="register-wrap">
    <a class="logo-wrap" href="<%= url('user.home') %>"><img src="<%= asset('assets/images/register_page_logo.png') %>"></a>

    <div class="white-bg-box clearfix js-register-wrap">
        <form class="register-form-wrap" method="post">
            <h2>Register for Workstyle</h2>

            <p class="error-msg hide js_registration_unsuccessful">Registration Unsuccessful! Please try again.</p>

            <div class="form-group js-input-group <% if(typeof firstNameError !== 'undefined'){ %>error-wrap<% } %>">
                <input type="text" id="first_name" class="form-control text-field-wrap js-input-text"
                       placeholder="First Name" name="first_name"
                        <% if(typeof firstName !== 'undefined'){ %>
                       value="<%= firstName %>"
                        <% } %>
                        >

                <div class="custom-tooltip">
                    <div class="custom-tooltip-arrow"></div>
                    <p class="error-text-wrap">
                        <% if(typeof firstNameError !== 'undefined'){ %>
                        <%= firstNameError %>
                        <% } %>
                    </p>
                </div>
            </div>
            <div class="form-group js-input-group <% if(typeof lastNameError !== 'undefined'){ %>error-wrap<% } %>">
                <input type="text" id="last_name" class="form-control text-field-wrap js-input-text"
                       placeholder="Last Name"
                       name="last_name"
                        <% if(typeof lastName !== 'undefined'){ %>
                       value="<%= lastName %>"
                        <% } %>
                        >

                <div class="custom-tooltip">
                    <div class="custom-tooltip-arrow"></div>
                    <p class="error-text-wrap">
                        <% if(typeof ulastNameError !== 'undefined'){ %>
                        <%= lastNameError %>
                        <% } %>
                    </p>
                </div>
            </div>
            <div class="form-group js-input-group <% if(typeof userEmailError !== 'undefined'){ %>error-wrap<% } %>">
                <input type="email" id="user_email" class="form-control text-field-wrap js-input-text"
                       placeholder="Email"
                       name="user_email"
                        <% if(typeof userEmail !== 'undefined'){ %>
                       value="<%= userEmail %>"
                        <% } %>
                        >

                <div class="custom-tooltip">
                    <div class="custom-tooltip-arrow"></div>
                    <p class="error-text-wrap">
                        <% if(typeof userEmailError !== 'undefined'){ %>
                        <%= userEmailError %>
                        <% } %>
                    </p>
                </div>
            </div>
            <div class="form-group js-input-group <% if(typeof positionTitleError !== 'undefined'){ %>error-wrap<% } %>">
                <input type="text" id="position_title" class="form-control text-field-wrap js-input-text"
                       placeholder="Position Title" name="position_title"
                        <% if(typeof positionTitle !== 'undefined'){ %>
                       value="<%= positionTitle %>"
                        <% } %>
                        >

                <div class="custom-tooltip">
                    <div class="custom-tooltip-arrow"></div>
                    <p class="error-text-wrap">
                        <% if(typeof positionTitleError !== 'undefined'){ %>
                        <%= positionTitleError %>
                        <% } %>
                    </p>
                </div>
            </div>
            <div class="form-group js-input-group <% if(typeof password1Error !== 'undefined'){ %>error-wrap<% } %>">
                <input type="password" id="password1" class="form-control text-field-wrap js-input-text"
                       placeholder="New Password" name="password1">

                <div class="custom-tooltip">
                    <div class="custom-tooltip-arrow"></div>
                    <p class="error-text-wrap">
                        <% if(typeof password1Error !== 'undefined'){ %>
                        <%= password1Error %>
                        <% } %>
                    </p>
                </div>
            </div>
            <div class="form-group js-input-group <% if(typeof password2Error !== 'undefined'){ %>error-wrap<% } %>">
                <input type="password" id="password2" class="form-control text-field-wrap js-input-text"
                       placeholder="Repeat New Password" name="password2">

                <div class="custom-tooltip">
                    <div class="custom-tooltip-arrow"></div>
                    <p class="error-text-wrap">
                        <% if(typeof password2Error !== 'undefined'){ %>
                        <%= password2Error %>
                        <% } %>
                    </p>
                </div>
            </div>
            <label class="checkbox-wrap">
                <input type="checkbox" name="stay_loged_in"/>
                <span>Stay logged in</span>
            </label>
            <button id="register" class="btn white-btn">REGISTER</button>
        </form>
    </div>

    <div class="white-bg-box loader-wrap clearfix" style="display: none">
        <img src="<%= asset('assets/images/workstyle_loading_white.gif') %>" class="validate-loader">
    </div>
</div>
<p class="login-now-wrap">Already have an account? <a href="<%= url('user.auth') %>">Log in</a></p>
<p class="copyright-text">&copy; Workstyle 2015</p>
