<%- contentFor('header') %>
<%- contentFor('footer') %>
<%- contentFor('script') %>
<script type="text/javascript">
    $(document).ready(function () {
        landing_page_init();
        (new CommonModule()).init();
        (new LoginModule()).init();
        (new ForgotPasswordModule()).init();

    });
</script>
<%- contentFor('title') %>
| Login/Sign Up
<%- contentFor('body') %>
<div class="content landing-background login-background">
    <div class="container">
        <div class="login-wrap js-data-container">
            <a class="logo-wrap" href="<%= url('user.home') %>"><img src="<%= asset('assets/images/home_style_logo.png') %>"></a>
            <div class="white-bg-box clearfix">
                <form class="login-form-wrap" id="login-form" action="<%= url('user.signIn') %>" method="post" role="form">
                    <h1>Sign In</h1>
                    <% if (typeof userEmailError !== 'undefined' || typeof passwordError !== 'undefined'){ %>
                        <p class="error-msg"><%= userEmailError %></p>
                    <% } %>
                    <div class="input-group input-group-wrap js-input-group <% if(typeof userEmailError !== 'undefined'){ %>error-wrap<% } %>">
                        <span class="input-group-addon merged-icon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input type="email" class="form-control text-field-wrap js-input-text" name="login_email" placeholder="Email" id="login_email" required="required" value="<% if(typeof userEmail !== 'undefined'){ %><%= userEmail %><% } %>">
                    </div>
                    <div class="input-group input-group-wrap js-input-group <% if (typeof passwordError !== 'undefined'){ %>error-wrap<% } %>">
                        <span class="input-group-addon merged-icon star-icon"><i class="glyphicon glyphicon-asterisk"></i></span>
                        <input type="password" class="form-control text-field-wrap js-input-text" name="login_password" placeholder="Password" id="login_password" required="required">
                    </div>
                    <label class="checkbox-wrap">
                        <input type="checkbox" id="stay_logged_in" name="stay_logged_in"<% if(typeof stayLoggedIn !== 'undefined' && stayLoggedIn === 'on') { %> checked <% } %> />
                        <span>Stay logged in</span>
                    </label>
                    <input class="btn white-btn" type="submit" name="login-submit" id="login-submit" value="SIGN IN TO WORKSTYLE">
                     <a  methods="" class="white-text-link" data-toggle="modal" data-target="#id-pwd-reset-modal">Forgot Password?</a>
                </form>
                <div class="register-now-wrap">
                    <h3>Got a new invite to Workstyle?</h3>
                    <a href="<%= url('user.register') %>" class="btn blue-btn">Register New Account</a>
                    <a class="white-text-link" href="<%= url('user.joinWaitList') %>">Otherwise Join Our Waitlist</a>
                </div>
            </div>
        </div>
        <p class="copyright-text">&copy; Workstyle 2015</p>
    </div>
</div>
<%- include _password_reset %>
