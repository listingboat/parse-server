<%- contentFor('script') %>
<script type="text/javascript">
	$(document).ready(function () {
		(new CommonModule()).init();
		(new QuestionVideoModule()).init();
		(new QuestionModule()).adjustMediaBoxSize(".js_question_wrap_container");
	});
</script>

<%- contentFor('title') %>
| Quest &amp; Quiz

<%- contentFor('body') %>
<%- include _header %>

<div class="content quiz-background <%- skill_type_class %>">
	<div class="container">
		<div class="question-wrap init-transition js_question_wrap_container">
			<div class="question-box image-question-wrap">
				<p class="ques-text">Which workstyle is the character in this movie clip?</p>
				<div class="clearfix multimedia-question-wrap">
					<div class="multimedia-wrap">
						<div class="video-quiz-section">
							<a class="video-controls-wrap js-play-video" href="#" data-video-url="//fast.wistia.net/embed/iframe/p9pvyn8zno?autoPlay=true">
								<span class="ws-icon-play play-icon-wrap"></span><br>
								<span class="control-text-wrap">PLAY VIDEO</span>
							</a>
							<div class="video-section js-video-section hidden">
								<div class="container">
									<iframe width="100%" height="100%" frameborder="0" class="wistia_embed" name="wistia_embed" allowfullscreen></iframe>
									<a class="close-video js-close-video glyphicon glyphicon-remove" title="Close video"></a>
								</div>
							</div>
						</div>
					</div>
					<ul class='options-wrap js-options-container clearfix'>
						<li>
							<label class="options-answer js-radio-label">
	                            <input type="radio" name="option" class="js-radio js_option_input">
	                            <span class="option-index">A</span>
	                            <p class="option-text js-option-text">The Connector</p>
	                            <span class="option-fill js-option-fill"></span>
	                        </label>
						</li>
						<li>
							<label class="options-answer js-radio-label">
	                            <input type="radio" name="option" class="js-radio js_option_input">
	                            <span class="option-index">B</span>
	                            <p class="option-text js-option-text">The Original</p>
	                            <span class="option-fill js-option-fill"></span>
	                        </label>
						</li>
						<li>
							<label class="options-answer js-radio-label">
	                            <input type="radio" name="option" class="js-radio js_option_input">
	                            <span class="option-index">C</span>
	                            <p class="option-text js-option-text">The Advisor</p>
	                            <span class="option-fill js-option-fill"></span>
	                        </label>
						</li>
						<li>
							<label class="options-answer js-radio-label">
	                            <input type="radio" name="option" class="js-radio js_option_input">
	                            <span class="option-index">D</span>
	                            <p class="option-text js-option-text">The Dreamer</p>
	                            <span class="option-fill js-option-fill"></span>
	                        </label>
						</li>
					</ul>
				</div>
				<a href="#" class="help-icon" data-toggle="modal" data-target="#quiz-help">&#63;</a>
			</div>
		</div>
	</div>
</div>
<% include _quiz_help_modal %>
