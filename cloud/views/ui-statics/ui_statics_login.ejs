<%- contentFor('script') %>
<script type="text/javascript">
    $(document).ready(function () {
    	landing_page_init();
    });
</script>

<%- contentFor('title') %>
| Login

<%- contentFor('body') %>
<div class="content landing-background login-background">
	<div class="container">
		<div class="login-wrap">
			<a class="logo-wrap" href="/"><img src="<%= asset('assets/images/login_page_logo.png') %>"></a>
			<div class="white-bg-box clearfix">
				<form class="login-form-wrap">
					<h1>Sign In</h1>
					<div class="input-group input-group-wrap js-input-group">
						<span class="input-group-addon merged-icon"><i class="glyphicon glyphicon-envelope"></i></span>
					    <input type="email" class="form-control text-field-wrap js-input-text"  placeholder="Email">
				    </div>
					<div class="input-group input-group-wrap js-input-group">
						<span class="input-group-addon merged-icon star-icon"><i class="glyphicon glyphicon-asterisk"></i></span>
						<input type="password" class="form-control text-field-wrap js-input-text"  placeholder="Password">
					</div>
					<label class="checkbox-wrap">
						<input type="checkbox"/>
						<span>Stay logged in</span>
					</label>
					<button class="btn white-btn">SIGN IN TO WORKSTYLE</button>
					<a href="#" class="white-text-link" data-toggle="modal" data-target="#id-pwd-reset-modal">Forgot Password?</a>
				</form>
				<div class="register-now-wrap">
					<h3>Got a new invite to Workstyle?</h3>
					<a href="/ui-statics/register-page" class="btn blue-btn">Register New Account</a>
					<a href="/ui-statics/join-waitlist" class="white-text-link">Otherwise Join Our Waitlist</a>
				</div>
			</div>
		</div>
		<p class="copyright-text">&copy; Workstyle 2015</p>
	</div>
</div>
<%- include _pwd_reset %>
