<div class="contest-detail-modal modal fade" id="explore-contest">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<a href="#" class="ws-icon-close-icon close" data-dismiss="modal" aria-label="Close"></a>
				<h1 class="modal-title">Beat the Contest, Get Rewarded!</h1>
				<p class="modal-subtitle">THE PERSON WHO HAS THE HIGHEST PQ GAIN OVER 7-DAYS AT <%= contest.get('company').get('name') %> <%= (typeof formatedLongDate ===  "string")? ('by ' + formatedLongDate) : '' %> WILL WIN!</p>
				<a class="contest-rules-link" href="#contest-rules" data-toggle="modal">See contest rules</a>
			</div>
			<div class="modal-body contest-detail-content">
				<div class="contest-modal-banner top-pq-growth-modal">
					<div class="contest-badge-wrap">
						<span class="ws-icon-top-pq-badge contest-badge-icon"></span>
					</div>
					<div class="contest-rewards-wrap">
						<h2>Most Improved 7-day PQ Score Gets:</h2>
						<h1><%= contest.get('award') %></h1>
						<div class="contest-status-wrap">
							<div class="contest-inner-widget">
								<p class="contest-status-label">CURRENT 7-DAY MOST IMPROVED PQ:</p>
								<p class="contest-status-value"><%= (leadingUser && typeof leadingUser.get('last_7_day_pq_gain') === "number")? "+" + leadingUser.get('last_7_day_pq_gain') + " PQ" : '---' %></p>
								<p class="contest-status-label">(<% if(typeof leadingUser !== "undefined") { %><%= leadingUser.get('first_name') %> <%= leadingUser.get('last_name') %><% } else { %>---<% } %>)</p>
							</div>
							<div class="contest-inner-widget">
								<p class="contest-status-label">YOUR 7-DAY PQ GAIN:</p>
								<p class="contest-status-value"><%= (typeof userWeeklyGain(currentUser) === "number")? ((userWeeklyGain(currentUser) >= 0)? "+" : "-") + Math.abs(userWeeklyGain(currentUser)) + " PQ" : '---' %></p>
							</div>
						</div>
					</div>
				</div>
				<div class="contest-details-wrap">
					<div class="contest-btm-wrap">
						<p class="contest-btm-text">PLAY A FEW MINUTES A DAY TO WIN!</p>
						<a class="btn black-btn" href="<%= url('quiz.start') %>">GO TRAIN TO WIN</a><br>
						<a data-dismiss="modal" aria-label="Close" class="change-contest-link">Not right now, I'll come back later</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% include _contest_rules_modal.ejs %>
